<%- include('../../partials/header') %>
<div class="intro-msg">
    <h1><%= title %></h1>
    <p>Edit account information here.</p>
</div>

<form action="/users/<%= user.id %>/update" method="post">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= user.name %>" required>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>" required>
    </div>
    <div>
        <label for="roleInput">Role:</label>
        <input type="hidden" name="role_name" value="<%= user.role_name %>" id="roleInput">
        <% if (locals.isLoggedIn && locals.currentUser.role_name === 'admin') { %>
            <div class="dropdown">
                <button type="button" class="dropbtn" id="roleDisplay"><%= user.role_name %> â–¼</button>
                <div class="dropdown-content">
                    <a href="#" data-role="admin">Admin</a>
                    <a href="#" data-role="user">User</a>
                </div>
            </div>
        <% } else { %>
            <span><%= user.role_name %></span>
        <% } %>
    </div>
    <div>
        <button type="submit" onclick="return confirm('Update this user?')">Update Account</button>
        <a href="/users">Cancel</a>
    </div>
</form>
<a href="/dashboard">Return to Dashboard</a>

<%- include('../../partials/footer') %>
