<!-- Page to upload podcasts as admin -->
 <%- include('../partials/header') %>
<div class="intro-msg">
    <h1><%= title %></h1>
    <p>Upload podcasts here for everyone to see.</p>
</div>

<form action="/podcasts/upload-video" method="post" class="podcast-upload-form">

    <div class="form-group">
        <label for="title">Podcast Title:</label>
        <input type="title" id="title" name="title"  placeholder="Enter podcast title" minlength="5" required>
    </div>    
    <div class="form-group">
        <label for="description">Description:</label>
        <input type="text" id="description" name="description"  placeholder="Enter podcast description" maxlength="250" required>
    </div>
    <div class="form-group">
        <label for="url">URL:</label>
        <input type="url" id="url" name="url"  placeholder="Enter podcast url" maxlength="150" required>
    </div>
    <button type="submit">Submit Upload</button>
</form>

<%- include('../partials/footer') %>
